<div id="container">
	<div id="top">
		<img src="images/shoutt-logo.jpg" alt="Shoutt" /><img src="images/top-background.jpg" alt="" />
	</div>
	<div id="postContainer">
		<div id="newShoutt"><strong>New Shoutt</strong></div>
		<div id="textLeft"><strong><span id="counter">140</span> left</strong></div>
		<br clear="all" />
		<% remote_form_for(:shoutt, :url => shoutts_path, :name => "shouttForm",
				   		   :complete => "updateShouttsTable()") do |f| %>
			<%= f.error_messages %>
		 	<%= f.text_area :body, :rows => 3, :cols => 39, :id => "shoutt_body",
							:onkeyup => "updateCounter()", :maxlength => 140 %>
            <br />
		  	<div id="menuContainer">
				<a href="shoutt.html" title="homepage"><strong>Home</strong></a> | 
				<a href="myReplies.html" title="My Replies"><strong>@ My Replies</strong></a>
			</div>
			<div id="sendContainer">
				<%= image_submit_tag "shoutt-button.jpg" %>
			</div>	  
		<% end %>
		<br clear="all" />
	</div>
	<div id="shouttsContainer">
    	<%= render :partial => 'shoutts_container' %>
    </div>
</div>
<div id="bottomContainer">
	<img src="images/bottomContainer.jpg" alt="" />
</div>
<input type="hidden" id="latest_shoutt_id" value="<%= @shoutts.first.nil? ? "0" : @shoutts.first.id %>">
